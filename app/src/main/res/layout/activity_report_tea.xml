<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white_background"
    tools:context=".ReportTeaActivity">

    <!-- Top Image Header with Back Button and Title -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_container"
        android:layout_width="0dp"
        android:layout_height="200dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_header_background"
            android:layout_width="421dp"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:src="@drawable/report"
            tools:ignore="MissingConstraints" />

        <ImageView
            android:id="@+id/iv_back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_back_arrow"
            app:tint="@color/white"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/report_tea_title"
            android:textColor="@color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable content below the header -->
    <ScrollView
        android:layout_width="390dp"
        android:layout_height="533dp"
        android:fillViewport="true"
        android:padding="16dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_container">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Tea Quantity Input Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/tea_quantity_label"
                android:textColor="@color/dark_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_tea_quantity"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_edittext"
                android:drawableEnd="@drawable/ic_arrows_up_down"
                android:hint="@string/tea_quantity_hint"
                android:inputType="number"
                android:padding="16dp" />

            <!-- Collection Date Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/collection_date_label"
                android:textColor="@color/dark_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_collection_date"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="24dp"
                android:background="@drawable/rounded_edittext"
                android:drawableEnd="@drawable/ic_calendar"
                android:focusable="false"
                android:hint="@string/collection_date_hint"
                android:inputType="date"
                android:padding="16dp" />

            <!-- Additional Notes Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:text="@string/additional_notes_label"
                android:textColor="@color/dark_text"
                android:textSize="18sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/et_additional_notes"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginBottom="32dp"
                android:background="@drawable/rounded_edittext"
                android:gravity="top"
                android:hint="@string/additional_notes_hint"
                android:inputType="textMultiLine"
                android:padding="16dp" />

            <!-- Submit Button -->
            <Button
                android:id="@+id/btn_submit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/primary_dark_green"
                android:padding="16dp"
                android:text="@string/submit_button"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="12dp" />

        </LinearLayout>
    </ScrollView>

    <!-- Bottom Navigation Bar (reusing from previous screen) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/border_color"
        android:elevation="8dp"
        app:itemIconSize="32dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
