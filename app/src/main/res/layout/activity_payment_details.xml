<?xml version="1.0" encoding="utf-8"?>
<!-- This is the main layout for the Payment Details screen. -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/off_white_background"
    tools:context=".PaymentDetailsActivity">

    <!-- Top App Bar -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/app_bar"
        android:layout_width="410dp"
        android:layout_height="78dp"
        android:background="@color/primary_dark_green"
        android:elevation="4dp"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back arrow icon -->
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="59dp"
            android:layout_height="64dp"
            android:layout_marginStart="16dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/back_button_desc"
            android:src="@drawable/ic_back_arrow1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />

        <!-- App bar title -->
        <TextView
            android:id="@+id/tv_app_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/payment_details_title"
            android:textColor="@color/white"
            android:textSize="30dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Scrollable content area -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/app_bar"
        app:layout_constraintBottom_toTopOf="@id/btn_confirm_payment"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- Payment Method Card -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/card_light_green">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="28dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/payment_method_title"
                        android:textStyle="bold"
                        android:textSize="22sp"
                        android:textColor="@color/primary_dark_green"
                        android:layout_marginBottom="20dp" />

                    <!-- Preferred Method Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/preferred_method"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/dark_text"
                        android:layout_marginBottom="8dp" />

                    <!-- Dropdown for Preferred Method (replicated with TextView) -->
                    <TextView
                        android:id="@+id/tv_preferred_method"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/spinner_background"
                        android:gravity="start|center_vertical"
                        android:minHeight="48dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="Bank Transfer"
                        android:textColor="@color/dark_text"
                        android:textSize="16sp" />

                    <!-- Bank Name Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bank_name"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/dark_text"
                        android:layout_marginBottom="8dp" />

                    <!-- Dropdown for Bank Name (replicated with TextView) -->
                    <TextView
                        android:id="@+id/tv_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/spinner_background"
                        android:gravity="start|center_vertical"
                        android:minHeight="48dp"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:text="Bank of Ceylon"
                        android:textColor="@color/dark_text"
                        android:textSize="16sp" />

                    <!-- Account Number Section -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/account_number"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:textColor="@color/dark_text"
                        android:layout_marginBottom="8dp" />

                    <!-- Input field for account number -->
                    <EditText
                        android:id="@+id/et_account_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_edittext"
                        android:hint="@string/account_number_hint"
                        android:inputType="number"
                        android:minHeight="48dp"
                        android:padding="12dp"
                        android:textSize="16sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Recent Payments Section -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/recent_payments"
                android:textStyle="bold"
                android:textSize="22sp"
                android:textColor="@color/primary_dark_green"
                android:layout_marginBottom="20dp" />

            <!-- Payment entry card (example) -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="20dp"
                app:cardElevation="12dp"
                app:cardBackgroundColor="@color/card_light_green">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="July 26, 2025"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/dark_text" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="45 Kg"
                            android:textSize="16sp"
                            android:textColor="@color/dark_text" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="end"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="paid"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:textColor="@color/primary_dark_green" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="LKR 4950"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:textColor="@color/primary_dark_green" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Confirm Payment Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_confirm_payment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="44dp"
        android:backgroundTint="@android:color/transparent"
        android:paddingVertical="16dp"
        android:text="@string/confirm_payment"
        android:textColor="@color/primary_dark_green"
        android:textSize="20sp"
        android:textStyle="bold"
        app:cornerRadius="20dp"
        app:elevation="12dp"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:strokeColor="@color/primary_dark_green"
        app:strokeWidth="3dp" />

    <!-- Bottom Navigation Bar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/border_color"
        android:elevation="8dp"
        app:itemIconSize="32dp"
        app:itemIconTint="@color/bottom_nav_color"
        app:itemTextColor="@color/bottom_nav_color"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>
