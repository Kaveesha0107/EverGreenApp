<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardBackgroundColor="@color/card_light_green"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical"
        android:baselineAligned="false">

        <!-- Left side: Date and KG -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_collection_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_text"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="July 29, 2025" />

            <TextView
                android:id="@+id/tv_collection_kg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/text_dark_gray"
                android:textSize="16sp"
                tools:text="25 Kg" />

        </LinearLayout>

        <!-- Right side: Status and Price -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tv_collection_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/status_pending_orange"
                android:textSize="18sp"
                android:textStyle="bold"
                tools:text="Pending" />

            <TextView
                android:id="@+id/tv_collection_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/dark_text"
                android:textSize="16sp"
                tools:text="LKR 2750" />

        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
